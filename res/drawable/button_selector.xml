<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
	<!-- state_focused获取到焦点 -->
    <item 
        android:drawable="@drawable/function_button_pressed" 
        android:state_focused="true">
    </item>
    
    <!-- android:state_pressed表示按下去 -->
	<item 
	    android:drawable="@drawable/function_button_pressed"
	    android:state_pressed="true">
	</item>
	
	<!--     表示默认的图片 -->
	<item 
	    android:drawable="@drawable/function_button_normal">
	    
	</item>
</selector>