<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff2b2b2b"
    android:orientation="vertical"
    tools:context="com.alandy.mobilesafe.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_title_bg" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:text="@string/tv_black_number_title"
            android:textColor="#fff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_open_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/button_selector"
            android:text="设置" />
        
        <Button
            android:id="@+id/bt_add_black_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/button_selector"
            android:text="@string/tv_black_number_title_add" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:id="@+id/lv_black_number">
    </ListView>

</LinearLayout>