<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/traffic_tanchu"
    android:orientation="vertical"
    tools:context="com.alandy.mobilesafe.MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:text="添加黑名单"
        android:textColor="#fff"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/traffic_tanchu_panel"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_selectot" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/cb_phone"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" 
                android:layout_marginLeft="10dp"
                android:text="电话拦截"/>
            <CheckBox
                android:id="@+id/cb_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="短信拦截"/>
        </LinearLayout>
    </LinearLayout>
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button 
            android:id="@+id/bt_ok"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:layout_margin="10dp"
            android:background="@drawable/greenbutton_selector"/>
        
        <Button 
            android:id="@+id/bt_cancle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:layout_margin="10dp"
            android:background="@drawable/button_selector"/>
        
    </LinearLayout>
</LinearLayout>